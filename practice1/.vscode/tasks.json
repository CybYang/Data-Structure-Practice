{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Make build dir",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-Command",
        "if (!(Test-Path build)) { New-Item -ItemType Directory -Path build | Out-Null }"
      ],
      "problemMatcher": []
    },
    {
      "label": "Build (g++)",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17", "-O2",
        "-I", "include",
        "src/datastructure_main.cpp",
        "-o", "build/demo.exe"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"],
      "dependsOn": ["Make build dir"]
    },
    {
      "label": "Build (graham)",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17", "-O2",
        "-I", "include",
        "src/graham_scan.cpp",
        "-o", "build/graham.exe"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": ["$gcc"],
      "dependsOn": ["Make build dir"]
    }
  ]
}
